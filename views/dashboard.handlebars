<style>
.card h4 {
color: aliceblue;
}
</style>
{{#each blogs}}
<div class="card my-2">
    <a href="/editblog/{{id}}" class="col-sm-12 my-auto text-decoration-none text-reset">
 <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center">

      <h4>{{title}}</h4>
  </div>
  <div class="card-body bg-danger bg-opacity-50 text-dark w-100 m-auto p-auto border border-dark border-top-0 border-4 rounded-bottom">
    <h5>{{content}}</h5>
  </div>
</a>
</div>
{{/each}}

<button id="grabPost" type="button" class="fs-4 py-2 px-3 text-light bg-primary rounded fixed-bottom w-25 mx-auto mb-2">Add New Post</button>

<script src="/js/grabBlog.js"></script>