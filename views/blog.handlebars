<style>
.card h4 {
color: aliceblue;
}
</style>
<div class="card my-2">
  <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center">
    <h4>{{blog.title}}</h4>
    <h4 class="mt-3 ms-3">Posted by {{blog.user.name}}</h4>
  </div>
  <div class="card-body bg-danger bg-opacity-50 text-dark w-100 m-auto p-auto border border-dark border-top-0 border-4 rounded-bottom">
    <h5>{{blog.content}}</h5>
  </div>
</div>
{{#each comments}}
<div class="card my-2">
    <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center">
    </div>
  <div class="card-body bg-danger bg-opacity-50 text-dark w-100 mx-auto pt-2 px-4 border border-dark border-top-0 border-4 rounded-bottom">
    <h5>{{content}}</h5>
    <p>-{{user.name}}</p>
  </div>
</div>
{{/each}}
{{#if logged_in}}
<div class="card my-2">
    <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center">
    </div>
  <div class="card-body bg-info bg-opacity-50 text-dark w-100 mx-auto pt-2 px-4 border border-dark border-top-0 border-4 rounded-bottom">
    <form id="comment" data-blogid="{{blog.id}}">
      <div class="mb-3 text-dark">
        <label for="content" class="form-label">Comment</label>
        <textarea type="text" class="form-control" name="content"></textarea>
      </div>
      <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
  </div>
</div>

<script src="/js/grabBlog.js"></script>
{{/if}}
